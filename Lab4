<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>Tabla de Números</title>
  </head>
  <body>
    <script>
      let num = parseInt(prompt("Introduce un número:"));

      document.write(
        "<table border><tr><th>Número</th><th>Cuadrado</th><th>Cubo</th></tr>"
      );
      for (let i = 1; i <= num; i++) {
        document.write(
          "<tr><td>" +
            i +
            "</td><td>" +
            i * i +
            "</td><td>" +
            i * i * i +
            "</td></tr>"
        );
      }
      document.write("</table>");
    </script>
  </body>
</html>
